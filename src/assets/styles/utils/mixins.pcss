@define-mixin isFlex $align: center, $justify: center, $direction: row, $wrap: wrap {
  display: flex;
  align-items: $(align);
  justify-content: $(justify);
  flex-direction: $(direction);
  flex-wrap: $(wrap);
}

@define-mixin bgImage $url, $repeat: no-repeat, $position: center, $size: initial {
  background-image: url($(url));
  background-repeat: $(repeat);
  background-position: $(position);
  background-size: $(size);
}
